{
  "version": 2,
  "trailingSlash": false,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/favicon\\.ico", "dest": "/api/index.py" },
    { "src": "/favicon\\.png", "dest": "/api/index.py" },
    { "src": "/mcp", "dest": "/api/index.py" },
    { "src": "/mcp/(.*)", "dest": "/api/index.py" },
    { "src": "/api/mcp", "dest": "/api/index.py" },
    { "src": "/api/mcp/(.*)", "dest": "/api/index.py" },
    { "src": "/health", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "rewrites": [
    { "source": "/mcp", "destination": "/api/index.py" },
    { "source": "/mcp/:path*", "destination": "/api/index.py" },
    { "source": "/api/mcp", "destination": "/api/index.py" },
    { "source": "/api/mcp/:path*", "destination": "/api/index.py" }
  ]
}
