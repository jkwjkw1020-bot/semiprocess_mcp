{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/mcp(.*)", "dest": "/api/mcp.py" },
    { "src": "/health", "dest": "/api/mcp.py" },
    { "src": "/favicon.ico", "dest": "/api/mcp.py" },
    { "src": "/(.*)", "dest": "/api/mcp.py" }
  ]
}